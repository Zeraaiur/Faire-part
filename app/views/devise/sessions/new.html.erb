<h2>Ouvrir une session admin</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
  <div class="login-info">
    <%= f.input :email, required: false, autofocus: true, label: "Courriel" %>
    <%= f.input :password, required: false, label: "Mot de passe"  %>
  </div>
</div>
  <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>

<div class="form-actions">
  <%= f.button :submit, "Se connecter", :class => "btn-print" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
