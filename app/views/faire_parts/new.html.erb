    <div class="couleur-error display-none error-message">Ce champs est obligatoire!</div>
    <hr>

    <%= f.input :pliant,as: :radio_buttons, :collection => [["Carte pliante", true],["Carte non-pliante", false]], label_html: { class: 'new-form-label' }   %>
    <div class="pliant-error display-none error-message">Ce champs est obligatoire!</div>
    <hr>

    <%= f.input :verso,as: :radio_buttons, :collection => [["Impresion recto seulement", false],["Impression recto-verso", true]], label_html: { class: 'new-form-label' }   %>
    <div class="verso-error display-none error-message">Ce champs est obligatoire!</div>
    <hr>

    <%= f.input :image %>

    <hr>

    <%= f.button :submit, :class => "btn-print", :value => "CrÃ©er le faire-part", :onclick => 'verifyNew();'
