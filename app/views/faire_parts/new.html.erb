  <div class="tag-header"> NOUVEAU FAIRE-PART</div>
  <div class="tag-contain">

    <%= simple_form_for @fairepart, url: faire_part_path, remote: :true, method: :post  do |f| %>
    <%= f.input :format, placeholder: '?x?' %>

    <hr>
