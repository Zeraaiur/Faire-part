<div class="tag-col nombre-container">
  <div class="tag-header">NOUVEAU FAIRE-PART
  </div>
  <div class="tag-contain">

    <div class="show-name">
      <div>
        Faire-part de format : <%= @fairepart.format %>
      </div>
    </div>
  </div>
</div>

<div class="tag-col nombre-container">
  <div class="tag-header">PRIX DES ENVELOPPES</div>
  <div class="tag-contain price-form-container">

    <h3>Entrer le prix <u>unitaire</u> pour les enveloppes de format : <%= @fairepart.format %></h3>
    <h4>Format accept√© : 0.00</h4>
    <br>
    <div class="price-input-container">

      <!-- === -->
      <%= simple_form_for @enveloppe, url: enveloppe_create_path, remote: :true, method: :post  do |f| %>
      <%= f.hidden_field :format, :value => @fairepart.format %>

      <hr>
      <%= f.text_field :prix, :maxlength => 4, :onkeypress => "return isNumber(event)", :onchange => "return isAllFieldFilled()", :onblur => "return isPriceGood(this)", :onblur => "return validateEnveloppe()", :class => "price_text_field", :placeholder => "0.00" %> <i>$</i>

      <hr>

      <%= f.button :submit, :class => "btn-print", :value => "Ajouter l'enveloppe", :id => "btn-enveloppe", disabled: true, :class => "btn btn-print btn-disable"
      %>

    <% end %>
  </div>
</div>
